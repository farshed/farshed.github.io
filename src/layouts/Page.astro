---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const { title = SITE_TITLE, description = SITE_DESCRIPTION } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead {...{ title, description }} />
  </head>
  <body>
    <Header />
    <div id="intersecter"></div>
    <script>
      let [csp, [dt, lt]] = ['color-scheme-pref', ['dark', 'light']];

      let theme = {
        get() {
          let e = localStorage.getItem(csp);
          return [dt, lt].includes(e) ? e : lt;
        },
        set(e) {
          document.body.className = e;
          localStorage.setItem(csp, e);
        }
      };

      let infra = {
        sun(e) {
          e.addEventListener('click', () => theme.set(theme.get() == dt ? lt : dt));
        },
        intersecter(e) {
          let t = document.querySelector('header');
          new IntersectionObserver(([e]) =>
            t.classList.toggle('elevated', !e.isIntersecting)
          ).observe(e);
        }
      };

      let setup = () => {
        theme.set(theme.get()),
          Object.keys(infra).forEach((e) => {
            let t = document.getElementById(e);
            t && infra[e](t);
          });
      };

      ['interactive', 'complete'].includes(document.readyState)
        ? setup()
        : document.addEventListener('DOMContentLoaded', setup);
    </script>
    <main><slot /></main>
  </body>
</html>
